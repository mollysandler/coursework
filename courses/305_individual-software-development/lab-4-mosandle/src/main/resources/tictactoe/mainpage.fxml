<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="327.0" prefWidth="428.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tictactoe.MainPageController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <HBox prefHeight="35.0" prefWidth="287.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Welcome to Tic Tac Toe!">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Text>
            <HBox prefHeight="35.0" prefWidth="81.0" HBox.hgrow="SOMETIMES" />
            <Button fx:id="startNewGame" defaultButton="true" mnemonicParsing="false" onAction="#handleStartNewGame" text="Start New Game" textAlignment="CENTER">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </HBox>
      <VBox fx:id="game" alignment="TOP_CENTER" visible="false">
         <children>
            <Text fx:id="mainText" fill="#1d32ee" strokeType="OUTSIDE" strokeWidth="0.0" text="Whose turn?">
               <font>
                  <Font size="29.0" />
               </font>
            </Text>
            <GridPane fx:id="gridpane" alignment="CENTER" gridLinesVisible="true" prefHeight="107.0" prefWidth="250.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </GridPane>
         </children>
      </VBox>
   </children>
</VBox>
